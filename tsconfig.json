{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["cypress", "node"]
  },
  "include": [
    "scripts/**/*.ts",
    "saucedemo-e2e/cypress/**/*.ts",
    "saucedemo-e2e/e2e/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
